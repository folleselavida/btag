div.si {
	cursor: pointer !important;
}

div.si label.cabinet {
	width: 100%;
	height: 54px;
	display: block;
	overflow: hidden;
	position: relative;
	z-index: 3;
	float: left;
	cursor: pointer !important;
}
div.si label.cabinet input {
	position: relative;
	left: -100%;
	top: 0;
	height: 54px;
	width: 100% !important;
	z-index: 2;
	opacity: 0;
	-moz-opacity: 0;
	filter:progid:DXImageTransform.Microsoft.Alpha(opacity=0);
	cursor: pointer !important;
}
div.si div.uploadButton {
	position: relative;
	float: left;
	cursor: pointer !important;
}
div.si div.uploadButton div {
	width: 100%;
	height: 54px;
	/* background: url(../images/basics/file.jpg); */
	left: -100%;
	position: absolute;
	cursor: pointer !important;
	z-index: 1;
}
div.si label.selectedFile {
	line-height: 34px;
}